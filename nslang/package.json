{
  "name": "nslang",
  "displayName": "nslang",
  "description": "nanoscript language service.",
  "version": "0.0.9",
  "publisher": "liamlangli",
  "scripts": {
    "pack": "vsce package",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:liamlangli/ns.git"
  },
  "icon": "ns.png",
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "ns",
        "icon": {
          "light": "ns.svg",
          "dark": "ns.svg"
        },
        "aliases": [
          "nanoscript",
          "ns"
        ],
        "extensions": [
          ".ns"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "ns-markdown-injection"
      }
    ],
    "activationEvents": [
      "onLanguage:ns"
    ],
    "grammars": [
      {
        "language": "ns",
        "scopeName": "source.ns",
        "path": "./ns.json"
      },
      {
        "language": "ns-markdown-injection",
        "scopeName": "markdown.ns.codeblock",
        "path": "./markdown.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.ns": "ns"
        }
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "typescript": "^5.7.2",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
