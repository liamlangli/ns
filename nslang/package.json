{
    "name": "nslang",
    "displayName": "nslang",
    "description": "nanoscript language service.",
    "version": "0.0.12",
    "publisher": "liamlangli",
    "scripts": {
        "vsce": "cp ../README.md ./ && vsce package"
    },
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Programming Languages",
        "Debuggers"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:liamlangli/ns.git"
    },
    "icon": "ns.png",
    "main": "./src/ns_ext.js",
    "contributes": {
        "debuggers": [
            {
                "type": "ns_debug",
                "label": "Debug with ns_debug",
                "languages": [
                    "ns"
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to the program to debug",
                                "default": "${file}"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically pause on first executable statement.",
                                "default": true
                            }
                        }
                    }
                }
            }
        ],
        "configuration": {
            "title": "Nanoscript LSP Configuration",
            "properties": {
                "ns.lsp.workspaceMode": {
                    "type": "string",
                    "enum": [
                        "perWorkspace",
                        "single"
                    ],
                    "default": "perWorkspace",
                    "description": "Run one LSP client per workspace folder or a single shared client."
                },
                "ns.lsp.transport": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "stdio",
                        "socket"
                    ],
                    "default": "auto",
                    "description": "LSP transport: auto uses stdio locally and socket in remote sessions."
                },
                "ns.lsp.port": {
                    "type": "number",
                    "default": 5000,
                    "description": "The port of the language server."
                },
                "ns.lsp.serverPath": {
                    "type": "string",
                    "default": "",
                    "description": "Absolute path to ns_lsp binary. Leave empty for auto-discovery."
                }
            }
        },
        "languages": [
            {
                "id": "ns",
                "icon": {
                    "light": "ns.svg",
                    "dark": "ns.svg"
                },
                "aliases": [
                    "nanoscript",
                    "ns"
                ],
                "extensions": [
                    ".ns"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "activationEvents": [
            "onLanguage:ns",
            "onDebug:type:ns_debug"
        ],
        "grammars": [
            {
                "language": "ns",
                "scopeName": "source.ns",
                "path": "./ns.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {}
}
