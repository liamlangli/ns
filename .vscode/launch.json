    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ast",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["--ast", "sample/ns/block.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "eval",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["sample/ns/rt.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ir",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["-ir", "sample/ns/rt.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lsp",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns_lsp",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "debug[socket]",
            "program": "${workspaceFolder}/bin/ns_debug",
            "args": ["--socket", "--port", "5001"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "sample[c/eval]",
            "preLaunchTask": "build sample",
            "program": "${workspaceFolder}/bin/sample/eval",
            "cwd": "${workspaceFolder}",
        }
    ]
}