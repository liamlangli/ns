        {
            "type": "lldb",
            "request": "launch",
            "name": "lexer",
            "program": "${workspaceFolder}/bison/ns_lexer",
            "args": [],
            "cwd": "${workspaceFolder}/bison"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns",
            "program": "${workspaceFolder}/out/ns",
