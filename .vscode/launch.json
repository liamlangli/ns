    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns token",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["-t","sample/rt.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns parse",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["-p", "sample/add.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns eval",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["sample/rt.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns repl",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["-r"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns bitcode",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["-o", "bin/add.bc", "-bc", "sample/add.ns"],
            "cwd": "${workspaceFolder}"
        }
    ]
}