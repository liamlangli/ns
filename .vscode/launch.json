{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns token",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["--token","${file}"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns ast",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["--ast", "sample/rt.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns expr",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["--ast", "sample/expr.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns eval",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["sample/rt.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns repl",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns bc",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["-o", "${file}.bc", "-b", "${file}"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns trace",
            "preLaunchTask": "build",
            "program": "xctrace",
            "args": ["record", "--template", "\"Time Profiler\"",  "--output", "bin/ns.trace", "--launch", "--", "bin/ns", "--ast", "sample/rt.ns"],
            "cwd": "${workspaceFolder}"
        }
    ]
}