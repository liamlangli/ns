    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "eval",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["sample/rt.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "bitcode",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns",
            "args": ["-b", "sample/rt.ns"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns_lsp",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/ns_lsp",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ns_debug[socket]",
            "program": "${workspaceFolder}/bin/ns_debug",
            "args": ["--socket", "--port", "5001"],
            "cwd": "${workspaceFolder}"
        }
    ]
}